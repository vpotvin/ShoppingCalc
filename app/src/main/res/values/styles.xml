<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/primary_material_dark_shopCalc</item>
        <item name="android:colorPrimaryDark">@color/primary_dark_material_dark_shopCalc</item>
        <item name="android:colorAccent">@color/accent_material_light_shopCalc</item>
        <item name="android:colorBackground">@color/background_material_light_shopCalc</item>
        <item name="android:buttonStyle">@style/SCButtonStyle</item>
    </style>

    <style name="SCButtonStyle" parent="android:Widget.Material.Button.Borderless">
        <item name="android:background">@color/primary_material_dark_shopCalc</item>
        <item name="android:textColor">@color/background_material_light_shopCalc</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="SCButtonCalcStyle" parent="SCButtonStyle">
        <item name="android:textSize">20sp</item>
    </style>
</resources>
